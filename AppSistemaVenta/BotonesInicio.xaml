<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSistemaVenta.BotonesInicio">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <!-- Botón para ir a la página de Productos -->
            <Button Text="Productos" Clicked="Productos_Clicked"/>

            <!-- Espacio para separar los botones -->
            <BoxView HeightRequest="20" />

            <!-- Botón para ir a la página de Historial Ventas -->
            <Button Text="Historial Ventas" Clicked="HistorialVentas_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>